    <telerik:RadGridView x:Name="RadGridView1" GroupRenderMode="Flat"
							 CanUserFreezeColumns="False"
							 RowIndicatorVisibility="Visible"
							 ColumnWidth="*"
                             RowDetailsVisibilityMode="VisibleWhenSelected"
							 IsReadOnly="True"
							 AutoGenerateColumns="False"
							 ShowGroupPanel="False"
							 ItemsSource="{Binding Source={StaticResource MyList}}">
        <telerik:RadGridView.Columns>
            <telerik:GridViewDataColumn Header="Liga" DataMemberBinding="{Binding}">
            </telerik:GridViewDataColumn>
        </telerik:RadGridView.Columns>
        <telerik:RadGridView.RowDetailsTemplate>
            <DataTemplate>
                <DockPanel DataContext="{Binding}">
                    <StackPanel>
                        <Label Content="{Binding Path=Nombre}"/>
                        <ListBox ItemsSource="{Binding Path=Divisiones}"
               IsSynchronizedWithCurrentItem="true"/>
                    </StackPanel>
                    <StackPanel>
                        <Label Content="{Binding Path=Divisiones/Nombre}"/>
                        <ListBox ItemsSource="{Binding Path=Divisiones/Equipos}"/>
                    </StackPanel>
                </DockPanel>
            </DataTemplate>
        </telerik:RadGridView.RowDetailsTemplate>
    </telerik:RadGridView>
</Window>
